library(rscopus) 
library(data.table)

api_key <- "your_api_key"
set_api_key(api_key)

x=scopus_search("TITLE-ABS-KEY(Rough Volatility)", 
                view = "COMPLETE",
)
x_raw <- gen_entries_to_df(x$entries)

x1_papers <- x_raw$df

x1_affiliations <- x_raw$affiliation 
x1_authors <- x_raw$author

fwrite(x1_papers,"x1_papers.csv")
fwrite(x1_affiliations,"x1_affiliations.csv")
fwrite(x1_authors,"x1_authors.csv")   
